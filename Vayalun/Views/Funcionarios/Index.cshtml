@model IEnumerable<Vayalun.Models.Funcionario>

@{
    ViewBag.Title = "Funcionário";
}

<h2>@ViewBag.Title</h2>
<div class="text-right">
    <p><a class="btn btn-default" href="~/Cargoes1">Cadastrar Cargo &raquo;</a></p>
</div>

<p>
    @Html.ActionLink("Cadastrar Novo Funcionário (+)", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Cargo
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
